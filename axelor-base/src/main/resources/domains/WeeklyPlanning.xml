<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="base" package="com.axelor.apps.base.db"/>

  <entity name="WeeklyPlanning" cacheable="true">
    <string name="name" required="true" namecolumn="true"/>
    <one-to-many name="weekDays" ref="com.axelor.apps.base.db.DayPlanning"
      mappedBy="weeklyPlanning"/>
    <decimal name="bonusCoef" title="Coefficient for bonus"/>
    <decimal name="leaveCoef" title="Coefficient for leave" default="1"/>
  </entity>

  <entity name="DayPlanning">
    <many-to-one name="weeklyPlanning" ref="com.axelor.apps.base.db.WeeklyPlanning"/>
    <string name="name" required="true" namecolumn="true" title="Day"
      selection="hrs.weekly.day.select"/>
    <time name="morningFrom" title="1st Period From"/>
    <time name="morningTo" title="To"/>
    <time name="afternoonFrom" title="2nd Period From"/>
    <time name="afternoonTo" title="To"/>
    <integer name="sequence" title="Seq."/>
    <decimal name="morningDuration" title="Morning duration">
    	<![CDATA[
		if(morningFrom == null && morningTo == null) {
			return BigDecimal.ZERO;
		}
		float hours = (float)java.time.Duration.between(morningFrom, morningTo).getSeconds()/3600;
		return new BigDecimal(hours).setScale(2, BigDecimal.ROUND_HALF_EVEN);
       ]]>
    </decimal>
    <decimal name="afternoonDuration" title="Afternoon duration">
    	<![CDATA[
		if(afternoonFrom == null && afternoonTo == null) {
			return BigDecimal.ZERO;
		}
		float hours = (float)java.time.Duration.between(afternoonFrom, afternoonTo).getSeconds()/3600;
		return new BigDecimal(hours).setScale(2, BigDecimal.ROUND_HALF_EVEN);
       ]]>
    </decimal>
  </entity>

</domain-models>